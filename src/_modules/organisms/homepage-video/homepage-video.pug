mixin homepage-video(spec)
  - spec = spec || {}
  - spec.__class = spec.__class || ''

  section.homepage-video(class=spec.__class)&attributes(attributes)
    .video-wrap.w-full
      .video-holder
        //- if spec.__video
        //-   video.video-main(poster=spec.__img playsinline autoplay muted loop)
        //-     // WCAG general accessibility recommendation is that media such as background video play through only once. Loop turned on for the purposes of illustration; if removed, the end of the video will fade in the same way created by pressing the "Pause" button
        //-     source(src=spec.__video type='video/mp4')
        if spec.__vimeo 
          iframe(src=spec.__vimeo frameborder='0' width='100%' height='100%' allow='autoplay; fullscreen' title=spec.__title webkitallowfullscreen mozallowfullscreen allowfullscreen)

        //- if spec.__img
        //-   img.video-img(src=spec.__img title=spec.__title alt=spec.__title width="1440" height="800")
      .video-content
        .container
          h1.banner-text
            span.text.inline-block.lime-green=spec.__text.__line1 
            span.text.inline-block.cyan=spec.__text.__line2 
            span.text.inline-block.pblue=spec.__text.__line3